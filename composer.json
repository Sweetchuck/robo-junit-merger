{
    "type": "robo-tasks",
    "name": "sweetchuck/robo-junit-merger",
    "description": "Robo task to merge JUnit XML files",
    "keywords": [
        "robo-tasks",
        "junit"
    ],
    "authors": [
        {
            "name": "Andor",
            "role": "Maintainer",
            "homepage": "https://github.com/Sweetchuck"
        }
    ],
    "support": {
        "source": "https://github.com/Sweetchuck/robo-junit-merger",
        "issues": "https://github.com/Sweetchuck/robo-junit-merger/issues"
    },
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "sweetchuck/git-hooks": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "repositories": {},
    "require": {
        "php": ">=8.2",
        "consolidation/robo": "^4.0",
        "sweetchuck/junit-merger": "1.x-dev"
    },
    "require-dev": {
        "ext-json": "*",
        "codeception/codeception": "^5.0",
        "codeception/module-asserts": "^3.0",
        "nuvoleweb/robo-config": "^3.0",
        "squizlabs/php_codesniffer": "^3.5",
        "sweetchuck/codeception-module-robo-task-runner": "3.x-dev",
        "sweetchuck/git-hooks": "^2.x-dev",
        "sweetchuck/robo-git": "3.x-dev",
        "sweetchuck/robo-phpcs": "3.x-dev",
        "symfony/debug": "^4.0 || ^5.0 || ^6.0",
        "symfony/error-handler": "^5.0 || ^6.0"
    },
    "suggest": {},
    "autoload": {
        "psr-4": {
            "Sweetchuck\\Robo\\JunitMerger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sweetchuck\\Robo\\JunitMerger\\Test\\Acceptance\\": "tests/acceptance/",
            "Sweetchuck\\Robo\\JunitMerger\\Test\\Unit\\": "tests/unit/",
            "Sweetchuck\\Robo\\JunitMerger\\Test\\": "tests/_support/"
        }
    },
    "scripts": {},
    "scripts-descriptions": {}
}
